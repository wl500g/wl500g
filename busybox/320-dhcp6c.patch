+void dhcp6_move_list(struct dhcp6_list *dst, struct dhcp6_list *src)
+{
+	struct dhcp6_listval *lv;
+
+	while ((lv = TAILQ_FIRST(src)) != NULL) {
+		TAILQ_REMOVE(src, lv, link);
+		TAILQ_INSERT_TAIL(dst, lv, link);
+	}
+}
