+/* Domain names stored in RFC1035 format */
+#if ENABLE_FEATURE_UDHCP_RFC3397 || ENABLE_DHCP6RELAY
+static int dhcp6_get_domain(int optlen, void *cp, int dh6optype,
+			    struct dhcp6_list *list)
+{
+	char *names, *p, *n;
+
+	if ((names = dname_dec(cp, optlen, "")) == NULL) {
+		bb_info_msg("failed to decode a %s ", dhcp6optstr(dh6optype));
+		return -1;
+	}
+
+	log2("  domains: '%s'", names);
+
+	p = names;
+	while (*p) {
+		struct dhcp6_vbuf vb;
+
+		n = strchrnul(p, ' ');
+		vb.dv_buf = p;
+		vb.dv_len = n - p + 1;
+		if (*n)
+			*(n++) = '\0';
+
+		if (dhcp6_add_listval(list, dh6optype, DHCP6_LISTVAL_VBUF,
+				&vb, NULL) == NULL) {
+			free(names);
+			return -2;
+		}
+		p = n;
+	}
+	free(names);
+
+	return 0;
+}
+#endif /* FEATURE_UDHCP_RFC3397 || ENABLE_DHCP6RELAY */
