+void dhcp6_clear_list(struct dhcp6_list *head)
+{
+	struct dhcp6_listval *lv;
+
+	while ((lv = TAILQ_FIRST(head)) != NULL) {
+		TAILQ_REMOVE(head, lv, link);
+		dhcp6_clear_listval(lv);
+	}
+}
