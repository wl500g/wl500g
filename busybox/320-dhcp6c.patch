+		return;
+	}
+
+	TAILQ_FOREACH(ifd, &G.ifids_list, ilink) {
+		if (ifid == ifd->ifid)
+			break;
+	}
+	/*
+	 * DHCPv6 relay may receive a DHCPv6 packet from a non-listening
+	 * interface, when a DHCPv6 server is running on that interface.
+	 * This check prevents such reception.
+	 */
