+/* Strip quotes from string */
+static char* FAST_FUNC qstrdup(char *qstr)
+{
+	size_t len;
+	char *dst;
+
+	len = strlen(qstr);
+	if (qstr[0] != '"' || len < 2 || qstr[len - 1] != '"')
+		return NULL;
+
+	dst = xmalloc(len);
+
+	memcpy(dst, qstr + 1, len - 1);
+	dst[len - 2] = '\0';
