+void dhcp6_clear_listval(struct dhcp6_listval *lv)
+{
+	dhcp6_clear_list(&lv->sublist);
+	switch (lv->lvtype) {
+	case DHCP6_LISTVAL_VBUF:
+		dhcp6_vbuf_free(&lv->val_vbuf);
+		break;
+	default:		/* nothing to do */
+		break;
+	}
+	free(lv);
+}
