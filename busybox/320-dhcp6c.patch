+			char *a = xmalloc_sockaddr2dotted_noport((struct sockaddr *)&from);
+
+			bb_info_msg("unexpected message (%s) on the %s side "
+			    "from %s", dhcp6msgstr(dh6->dh6_msgtype),
+			    fromclient ? "client" : "server", a);
+			free(a);
+			break;
+			}
+	}
+}
