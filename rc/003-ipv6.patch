+			fprintf(fp, "-A INPUT -p ipv6-icmp -j %s\n", logaccept);
+		fprintf(fp, "-A OUTPUT -p ipv6-icmp -j %s\n", logaccept);
+		fprintf(fp, "-A FORWARD -p ipv6-icmp -j %s\n", logaccept);
+	}
+
+	// Allow Link-Local addresses
+	fprintf(fp, "-A INPUT -s fe80::/10 -j ACCEPT\n");
+	fprintf(fp, "-A OUTPUT -s fe80::/10 -j ACCEPT\n");
+
+	// Allow multicast
+	fprintf(fp, "-A INPUT -s ff00::/8 -j ACCEPT\n");
+	fprintf(fp, "-A OUTPUT -s ff00::/8 -j ACCEPT\n");
+
+	fprintf(fp, "COMMIT\n\n");
+       	fclose(fp);
+
+	eval("ip6tables-restore", "/tmp/filter6_rules");
+	}
+#endif
 	return 0;
