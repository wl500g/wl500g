+			def_pol_input = logdrop;
+
+		if (nvram_match("fw_lw_enable_x", "1")
+		    && nvram_match("filter_lw_default_x", "DROP"))
+			def_pol_output = logdrop;
+	}
+
+	fprintf(fp, "*filter\n:INPUT %s [0:0]\n"
+		    ":FORWARD ACCEPT [0:0]\n"
+		    ":OUTPUT %s [0:0]\n", def_pol_input, def_pol_output);
+
+	// Disable processing of any RH0 packet
+	// which could allow a ping-pong of packets.
