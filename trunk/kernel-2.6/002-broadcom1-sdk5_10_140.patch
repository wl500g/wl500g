+static int
+bcm947xx_dma_getposition(dma_addr_t *src, dma_addr_t *dst)
+{
+	if (src) {
+		*src = (dma_addr_t)dma_getpos(snd_bcm->di[0], DMA_TX);
+	} else if (dst) {
+		*dst = (dma_addr_t)dma_getpos(snd_bcm->di[0], DMA_RX);
+	}
+
+	return 0;
+}
