+static void
+bcm947xx_i2s_free(bcm947xx_i2s_info_t *sndbcm)
+{
+	osl_t *osh = sndbcm->osh;
+
+	dma_detach(sndbcm->di[0]);
+
+	si_detach(sndbcm->sih);
+
+	MFREE(osh, sndbcm, sizeof(bcm947xx_i2s_info_t));
+
+	osl_detach(osh);
+}
