+void write_fragment()
+{
+	if(fragment_size == 0)
+		return;
+
+	pthread_mutex_lock(&fragment_mutex);
+	if(fragments % FRAG_SIZE == 0) {
+		if((fragment_table = (squashfs_fragment_entry *) realloc(fragment_table, (fragments + FRAG_SIZE) * sizeof(squashfs_fragment_entry))) == NULL) {
